# ============================================
# White Palace Grill - LiveKit Voice Agent
# Dockerfile for the AI telephony agent
# ============================================

FROM python:3.12-slim

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    libffi-dev \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Create app directory
WORKDIR /app

# Copy dependency files first (for better caching)
COPY pyproject.toml ./
COPY requirements.txt ./

# Install Python dependencies
# Using pip with pyproject.toml dependencies
RUN pip install --upgrade pip && \
    pip install \
    "livekit-agents>=1.0.0" \
    "livekit-plugins-openai>=1.0.0" \
    "livekit-plugins-deepgram>=1.0.0" \
    "livekit-plugins-silero>=1.0.0" \
    "livekit-plugins-cartesia>=1.0.0" \
    "livekit-plugins-elevenlabs>=1.0.0" \
    "livekit-plugins-google>=1.0.0" \
    "aiohttp>=3.9.0" \
    "pydantic>=2.0.0" \
    "python-dotenv>=1.0.0"

# Copy application code
# Only copy what's needed for the agent
COPY agent_white_palace.py ./
COPY backend/prompt.py ./backend/

# Create backend __init__.py if needed
RUN mkdir -p backend && touch backend/__init__.py

# Health check - verify agent can import
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import agent_white_palace" || exit 1

# Default command - start the agent in production mode
CMD ["python", "agent_white_palace.py", "start"]
