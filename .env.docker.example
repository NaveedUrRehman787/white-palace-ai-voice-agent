# ============================================
# White Palace Grill - Docker Environment Variables
# Copy to .env and fill in your values
# ============================================

# ==========================================
# LiveKit Cloud Configuration
# Get these from https://cloud.livekit.io
# ==========================================
LIVEKIT_URL=wss://your-project.livekit.cloud
LIVEKIT_API_KEY=your_api_key
LIVEKIT_API_SECRET=your_api_secret

# ==========================================
# AI Provider API Keys
# ==========================================
# OpenAI - Required for GPT-4 LLM and TTS
OPENAI_API_KEY=sk-...

# Deepgram - Required for Speech-to-Text
DEEPGRAM_API_KEY=...

# Optional: Alternative TTS providers
CARTESIA_API_KEY=
ELEVENLABS_API_KEY=
GOOGLE_API_KEY=

# ==========================================
# Database Configuration
# ==========================================
POSTGRES_USER=whitepalace
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=whitepalace_db
DATABASE_URL=postgresql://whitepalace:your_secure_password_here@postgres:5432/whitepalace_db

# ==========================================
# Flask Backend Configuration
# ==========================================
FLASK_ENV=production
SECRET_KEY=your_flask_secret_key_here
PORT=5000

# ==========================================
# Twilio Configuration (for phone integration)
# ==========================================
TWILIO_ACCOUNT_SID=AC...
TWILIO_AUTH_TOKEN=...
TWILIO_PHONE_NUMBER=+1...

# ==========================================
# Optional: Monitoring & Logging
# ==========================================
LOG_LEVEL=INFO
